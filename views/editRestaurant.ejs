<h1>Edit Restaurant Information</h1>

<!-- Form to edit restaurant details -->
<form action="/restaurant-dashboard/edit-konten" method="POST">
    <div class="form-group">
        <label for="culinary_type">Culinary Type:</label>
        <input type="text" id="culinary_type" name="culinary_type" value="<%= restaurant.culinary_type %>" required>
    </div>

    <div class="form-group">
        <label for="address">Address:</label>
        <input type="text" id="address" name="address" value="<%= restaurant.address %>" required>
    </div>

    <div class="form-group">
        <label for="phone">Phone:</label>
        <input type="text" id="phone" name="phone" value="<%= restaurant.phone %>" required>
    </div>

    <div class="form-group">
        <label for="link">Website/Link:</label>
        <input type="text" id="link" name="link" value="<%= restaurant.link %>" required>
    </div>

    <div class="form-group">
        <label for="is_branch">Is Branch:</label>
        <input type="checkbox" id="is_branch" name="is_branch" <%= restaurant.is_branch ? 'checked' : '' %>>
    </div>

    <div class="form-group">
        <label for="payment_methods">Payment Methods:</label>
        <input type="text" id="payment_methods" name="payment_methods" value="<%= restaurant.payment_methods %>" required>
    </div>

    <div class="form-group">
        <label for="price_range">Price Range:</label>
        <input type="text" id="price_range" name="price_range" value="<%= restaurant.price_range %>" required>
    </div>

    <div class="form-group">
        <label for="open_schedule">Open Schedule:</label>
        <input type="text" id="open_schedule" name="open_schedule" value="<%= restaurant.open_schedule %>" required>
    </div>

    <div class="form-group">
        <label for="available_facilities">Available Facilities:</label>
        <input type="text" id="available_facilities" name="available_facilities" value="<%= restaurant.available_facilities %>" required>
    </div>

    <div class="form-group">
        <label for="unavailable_facilities">Unavailable Facilities:</label>
        <input type="text" id="unavailable_facilities" name="unavailable_facilities" value="<%= restaurant.unavailable_facilities %>" required>
    </div>

    <div class="form-group">
        <label for="overall_rating">Overall Rating:</label>
        <input type="number" id="overall_rating" name="overall_rating" value="<%= restaurant.overall_rating %>" required readonly>
    </div>

    <div class="form-group">
        <label for="individual_rating">Individual Rating:</label>
        <input type="text" id="individual_rating" name="individual_rating" value="<%= restaurant.individual_rating %>" required readonly>
    </div>

    <div class="form-group">
        <label for="slot">Slot:</label>
        <input type="number" id="slot" name="slot" value="<%= restaurant.slot %>" required>
    </div>

    <button type="submit" class="btn btn-success">Save Changes</button>
</form>
