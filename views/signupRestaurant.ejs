<form action="/restaurant-dashboard/signup" method="POST">
    <label for="email">Email:</label>
    <input type="email" id="email" name="email" required>

    <label for="password">Password:</label>
    <input type="password" id="password" name="password" required>

    <label for="repeatPassword">Repeat Password:</label>
    <input type="password" id="repeatPassword" name="repeatPassword" required>

    <label for="restaurant_name">Restaurant Name:</label>
    <input type="text" id="restaurant_name" name="restaurant_name" required>

    <label for="phone_number">Phone Number:</label>
    <input type="text" id="phone_number" name="phone_number" required>

    <label for="business_type">Business Type:</label>
    <input type="text" id="business_type" name="business_type" required>

    <label for="company_name">Company Name (optional):</label>
    <input type="text" id="company_name" name="company_name">

    <label for="full_address">Full Address:</label>
    <input type="text" id="full_address" name="full_address" required>

    <label for="npwp">NPWP:</label>
    <input type="text" id="npwp" name="npwp" required>

    <label for="npwp_photo">NPWP Photo:</label>
    <input type="file" id="npwp_photo" name="npwp_photo" required>

    <label for="full_name">Full Name:</label>
    <input type="text" id="full_name" name="full_name" required>

    <label for="nik">NIK:</label>
    <input type="text" id="nik" name="nik" required>

    <label for="gender">Gender:</label>
    <select id="gender" name="gender" required>
        <option value="Male">Male</option>
        <option value="Female">Female</option>
    </select>

    <label for="birth_date">Birth Date:</label>
    <input type="date" id="birth_date" name="birth_date" required>

    <label for="personal_phone">Personal Phone Number:</label>
    <input type="text" id="personal_phone" name="personal_phone" required>

    <label for="domicile">Domicile:</label>
    <input type="text" id="domicile" name="domicile" required>

    <label for="ktp_photo">KTP Photo:</label>
    <input type="file" id="ktp_photo" name="ktp_photo" required>

    <button type="submit">Sign Up</button>
</form>
