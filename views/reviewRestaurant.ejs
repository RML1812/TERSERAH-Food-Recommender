<div class="container mx-auto py-10">
  <h1 class="text-4xl font-bold text-center mb-8">Review Restaurant Accounts</h1>

  <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
    <% pendingRestaurants.forEach(restaurant => { %>
      <div class="bg-white shadow rounded-lg p-6">
        <h2 class="text-2xl font-semibold mb-2"><%= restaurant.restaurant_name %></h2>
        <p><strong>Email:</strong> <%= restaurant.email %></p>
        <p><strong>Phone:</strong> <%= restaurant.phone_number %></p>
        <p><strong>Company Name:</strong> <%= restaurant.company_name %></p>
        <p><strong>Business Type:</strong> <%= restaurant.business_type %></p>
        <p><strong>Status:</strong> <%= restaurant.status %></p>
        <div class="mt-4 flex space-x-4">
          <form action="/admin-dashboard/review-restaurant/<%= restaurant._id %>" method="POST">
            <input type="hidden" name="action" value="approve">
            <button type="submit" class="bg-green-500 text-white py-2 px-4 rounded hover:bg-green-600">Approve</button>
          </form>
          <form action="/admin-dashboard/review-restaurant/<%= restaurant._id %>" method="POST">
            <input type="hidden" name="action" value="reject">
            <button type="submit" class="bg-red-500 text-white py-2 px-4 rounded hover:bg-red-600">Reject</button>
          </form>
        </div>
      </div>
    <% }) %>
  </div>
</div>
