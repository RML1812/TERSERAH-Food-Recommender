
    <h1>Form Reservasi</h1>
    <form action="/reservation/<%= restaurantId %>" method="POST">
        <label for="tanggalReservation">Tanggal Reservasi:</label>
        <input type="date" id="tanggalReservation" name="tanggalReservation" required><br><br>

        <label for="name">Name:</label>
        <input type="text" id="name" name="name" required><br><br>

        <label for="jumlahOrang">Jumlah Orang:</label>
        <input type="number" id="jumlahOrang" name="jumlahOrang" required><br><br>

        <label for="noHP">Nomor HP:</label>
        <input type="tel" id="noHP" name="noHP" required><br><br>

        <label for="waktuMulai">Waktu Mulai:</label>
        <input type="time" id="waktuMulai" name="waktuMulai" required><br><br>

        <label for="waktuSelesai">Waktu Selesai:</label>
        <input type="time" id="waktuSelesai" name="waktuSelesai" required><br><br>

        <button type="submit">Submit Reservasi</button>
    </form>