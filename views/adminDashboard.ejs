<div class="container mx-auto py-10">
  <h1 class="text-4xl font-bold text-center mb-8">Admin Dashboard</h1>

  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-10">
    <!-- Total Users -->
    <div class="bg-white shadow rounded-lg p-6 text-center">
      <h2 class="text-2xl font-semibold">Total Users</h2>
      <p class="text-4xl font-bold mt-4"><%= totalUsers %></p>
    </div>

    <!-- Total Restaurants -->
    <div class="bg-white shadow rounded-lg p-6 text-center">
      <h2 class="text-2xl font-semibold">Total Restaurants</h2>
      <p class="text-4xl font-bold mt-4"><%= totalRestaurants %></p>
    </div>

    <!-- Pending Restaurants -->
    <div class="bg-white shadow rounded-lg p-6 text-center">
      <h2 class="text-2xl font-semibold">Pending Restaurant Accounts</h2>
      <p class="text-4xl font-bold mt-4"><%= pendingRestaurantsCount %></p>
      <a href="/admin-dashboard/review-restaurant" class="text-blue-600 underline mt-4 block">Review Pending Accounts</a>
    </div>
  </div>
  
  <!-- Filter by date (optional) -->
  <div class="bg-gray-100 p-4 rounded-lg shadow">
    <h3 class="text-xl font-semibold mb-4">Filter Data by Date</h3>
    <form action="/admin-dashboard/filter" method="GET">
      <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
        <div>
          <label for="start_date" class="block mb-2">Start Date</label>
          <input type="date" id="start_date" name="start_date" class="w-full p-2 border rounded-lg" />
        </div>
        <div>
          <label for="end_date" class="block mb-2">End Date</label>
          <input type="date" id="end_date" name="end_date" class="w-full p-2 border rounded-lg" />
        </div>
      </div>
      <button type="submit" class="mt-4 bg-blue-500 text-white py-2 px-6 rounded-lg hover:bg-blue-600">Filter</button>
    </form>
  </div>
</div>
